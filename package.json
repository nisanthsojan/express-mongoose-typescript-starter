{
  "name": "exmoboty_starter",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "start": "node server.js",
    "build-prod": "npm run build-sass && npm run build-public-ts && npm run build-server-ts && npm run tslint && npm run copy-static-assets && npm run compile-pug",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "debug": "npm run build-prod && npm run serve-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "npm run copy-static-assets && concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Public,Node\" -c \"yellow.bold,cyan.bold,green.bold,magenta.bold\" \"npm:watch-sass\" \"npm:watch-server-ts\" \"npm:watch-public-ts\" \"npm:serve-debug\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "build-sass": "node-sass src-public/css/main.scss dist/public/css/main.css --output-style compressed",
    "watch-sass": "node-sass src-public/css/main.scss dist/public/css/main.css && node-sass -w src-public/css/main.scss dist/public/css/main.css",
    "build-public-ts": "webpack --mode=production",
    "watch-public-ts": "webpack --mode=development --watch --info-verbosity verbose",
    "build-server-ts": "tsc",
    "watch-server-ts": "tsc -w",
    "compile-pug": "gulp html"
  },
  "keywords": [],
  "author": "Nisanth Sojan<nisanthsojan@yahoo.com>",
  "license": "MIT",
  "engines": {
    "node": "11.x",
    "npm": "6.x"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "async": "^2.6.2",
    "bcrypt": "^3.0.5",
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.4",
    "connect-mongo": "^2.0.3",
    "csurf": "^1.9.0",
    "dotenv": "^7.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-enforces-ssl": "^1.1.0",
    "express-flash": "0.0.2",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.1",
    "helmet": "^3.16.0",
    "lodash": "^4.17.5",
    "mongo-sanitize": "^1.0.1",
    "mongoose": "^5.4.19",
    "named-routes": "^2.0.7",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.3",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.8.0",
    "@types/async": "^2.4.1",
    "@types/bluebird": "^3.5.26",
