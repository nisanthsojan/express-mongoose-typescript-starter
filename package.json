    "@types/mongodb": "^3.1.22",
    "@types/mongoose": "^5.3.23",
    "@types/morgan": "^1.7.35",
    "@types/named-routes": "^2.0.0",
    "@types/node": "^11.11.4",
    "@types/passport": "^1.0.0",
    "@types/passport-local": "^1.0.33",
    "@types/request": "^2.48.1",
    "@types/shelljs": "^0.8.3",
    "@types/supertest": "^2.0.7",
    "bootstrap": "^4.3.1",
