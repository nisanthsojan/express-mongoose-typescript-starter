nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
    a.navbar-brand(href=url('index'))
        img.logo.mr-1.rounded-sm.bg-light(src='/images/logo.svg', alt=_appName, width=30)
        strong=_appName
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarHeader')
        span.navbar-toggler-icon
    div#navbarHeader.collapse.navbar-collapse
        form.form-inline.mt-2.mt-md-0
            input.form-control.mr-sm-2(type="text" placeholder="Search" aria-label="Search")
            button.btn.btn-outline-success.my-2.my-sm-0(type="submit") Search
        ul.navbar-nav.ml-auto
            li.nav-item(class=(title === 'Home') ? 'active' : undefined)
                a.nav-link(href=url('index')) Home
            li.nav-item(class=(title === 'Contact') ? 'active' : undefined)
                a.nav-link(href=url('contact')) Contact
            if user
                li.nav-item.dropdown
                    a#userDropdownMenuLink.nav-link.dropdown-toggle.text-truncate.d-inline-block(href='#' role='button' data-toggle='dropdown', style={
                        'max-width': '250px'
                    } ) #{user.profile.name || user.email}
                    div.dropdown-menu.dropdown-menu-right
                        a.dropdown-item(href=url('admin.account')) Profile
                        div.dropdown-divider
                        a.dropdown-item(href=url('admin.logout')) Logout
