{
    "compilerOptions": {
        "module": "commonjs",
        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "pretty": true,
        "typeRoots": ["node_modules/@types", "@types"]
    }
}
